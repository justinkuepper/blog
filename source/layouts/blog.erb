<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Use the title from a page's frontmatter if it has one -->
    <title><%= current_page.data.title || "Avid Polymath" %></title>
    <%= stylesheet_link_tag "site" %>
    <%= javascript_include_tag "site" %>
  </head>
  <body>
    <header id="article-header">
      <div class="container">
        <h1><%= link_to 'Avid Polymath', '/index.html' %></h1>
        <ul id="social-buttons">
          <li><a href="https://github.com/justinkuepper"><%= image_tag 'github.svg' %></a></li>
          <li><a href="https://twitter.com/jdkuepper"><%= image_tag 'twitter.svg' %></a></li>
          <li><a href="/feed.xml"><%= image_tag 'rss.svg' %></a></li>
        </ul>
      </div>
    </header>

    <section id="blog" role="main">
      <div class="container">
        <article id="content">
          <h2><%= current_page.data.title %></h2>
          <%= yield %>
        </article>
      </div>
    </section>

    <section id="contact">
      <div class="container">
        <h2>Get in Touch</h2>
        <p class="contact-text">Want to talk? Send an e-mail to:</p>
        <div class="email-address"><a href="mailto:justin.kuepper@gmail.com">justin.kuepper@gmail.com</a></div>
        <p class="disclaimer">Copyright &copy; 2017 Justin Kuepper. All Rights Reserved.</p>
      </div>
    </section>

    <script src="/javascripts/scripts.js"></script>
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-105103587-1', 'auto');
      ga('send', 'pageview');

    </script>
  </body>
</html>
